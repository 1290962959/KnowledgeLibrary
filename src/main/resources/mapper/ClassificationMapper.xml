<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lib.dao.ClassificationDao">
	
	 <insert id="insert">
		insert into classification(classification_name,parent_id,parent_path)
		values(#{classificationName}, #{parentId},#{parentPath})  
	 </insert>
	
	 <delete id="delete" parameterType="Long">  
       delete from classification where classification_id=#{classificationId}  
     </delete>  
	
	 <update id="modify">  
       update classification set classification_name=#{classificationName} where classification_id=#{classificationId}  
     </update>  
     
     <select id="findById" parameterType="Long" resultType="Classification">
     	select * from classification where classification_id=#{classificationId}  
     </select>
     
     <select id="findFatherPathById" parameterType="Long" resultType="String">
     	select parent_path from classification where classification_id=#{classificationId}  
     </select>
     
     <select id="findAllChildById" parameterType="Long" resultType="Classification">
     	select * from classification where parent_id=#{classificationId}  
     </select>
     
</mapper>